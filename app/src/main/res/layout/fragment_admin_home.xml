<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/white"

    tools:context=".view.fragment.admin.AdminHomeFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"

        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_withdraw_request"
            android:layout_width="300sp"
            android:layout_height="80sp"
            android:text="@string/withdraw_request"
            android:backgroundTint="@color/red"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_deposit_request"
            android:layout_width="300sp"
            android:layout_height="80sp"
            android:text="@string/deposit_request"
            app:backgroundTint="@color/green"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_show_transactions"
            android:layout_width="300sp"
            android:layout_height="80sp"
            android:text="@string/show_transactions"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_change_transaction_number"
            android:layout_width="300sp"
            android:layout_height="80sp"
            android:text="@string/change_transaction_number"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_new_userr"
            android:layout_width="300sp"
            android:layout_height="80sp"
            android:text="@string/add_new_user"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_affiliate"
            android:layout_width="300sp"
            android:layout_height="80sp"
            android:text="@string/affiliate"/>

    </LinearLayout>

</FrameLayout>

</layout>